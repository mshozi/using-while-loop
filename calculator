#include<iostream>
#include<iostream> 
 using namespace std; 
 int main(){ 

while(true)
{
         int num1,num2; 
         char op;
         cout<<"ENTER THE OPERATOR(Hint + - * / %):"; 
         cin>>op; 
         cout<<"ENTER THE FIRST NUMBER:"; 
         cin>>num1; 
         cout<<"ENTER THE SECOND NUMBER:"; 
         cin>>num2;
         if(op == '+' ) 
         cout<<num1 + num2<<endl;
         else 
         if(op == '-') 
         cout<<num1 - num2<<endl;
         else 
         if(op == '*') 
         cout<<num1 * num2<<endl;
         else 
         if(op == '/') 
         cout<<num1 / num2<<endl;
         else
         if(op == '%')
         cout<<num1 % num2<<endl;
         }
   }
